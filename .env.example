# Configuración de Producción
APP_NAME=kero-kero # Este es el nombre de nuestra aplicación.
APP_ENV=production # Define el entorno de la aplicación, como 'production' o 'development', para adaptar comportamientos.
APP_PORT=8080 # El puerto en el que nuestra aplicación escuchará las peticiones entrantes.
APP_DEBUG=false # Indica si el modo de depuración está activado o desactivado, útil para mostrar errores detallados.

# Base de Datos
DB_DRIVER=postgres  # postgres o sqlite # El controlador de base de datos que utilizamos para la persistencia de datos.
DB_HOST=localhost # La dirección del servidor de nuestra base de datos.
DB_PORT=5432 # El puerto en el que nuestra base de datos está escuchando las conexiones.
DB_USER=kerokero # El usuario que nuestra aplicación utiliza para conectarse a la base de datos.
DB_PASSWORD=changeme # La contraseña para el usuario de la base de datos.
DB_NAME=kerokero_db # El nombre de la base de datos a la que nos conectamos.
DB_SSLMODE=disable # El modo SSL para la conexión a la base de datos, para asegurar la comunicación.
DB_MAX_OPEN_CONNS=25 # El número máximo de conexiones abiertas a la base de datos que nuestra aplicación puede mantener.
DB_MAX_IDLE_CONNS=5 # El número máximo de conexiones inactivas en el pool de la base de datos.

# SQLite (si DB_DRIVER=sqlite)
SQLITE_PATH=./data/kerokero.db # La ruta al archivo de la base de datos SQLite si utilizamos este controlador, donde se almacenarán nuestros datos.

# Redis
REDIS_HOST=localhost # La dirección del servidor Redis que usamos para cache, colas o sesiones.
REDIS_PORT=6379 # El puerto en el que Redis está escuchando.
REDIS_PASSWORD= # La contraseña para conectarse a Redis (si es necesaria para la seguridad).
REDIS_DB=0 # El número de base de datos Redis a utilizar.
REDIS_POOL_SIZE=10 # El tamaño del pool de conexiones para Redis, para gestionar las conexiones eficientemente.

# API Security
API_KEY=your-secret-api-key-change-in-production # Nuestra clave API secreta para autenticar ciertas peticiones y proteger nuestros endpoints.
JWT_SECRET=your-jwt-secret-change-in-production # El secreto que usamos para firmar y verificar tokens JWT, asegurando la identidad del usuario.

# Rate Limiting
RATE_LIMIT_REQUESTS=100 # El número máximo de peticiones permitidas en una ventana de tiempo, para prevenir abusos.
RATE_LIMIT_WINDOW=60  # segundos # La ventana de tiempo en segundos para el límite de peticiones.

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com # Las URL de origen permitidas para las peticiones CORS, controlando quién puede acceder a nuestra API.
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS # Los métodos HTTP permitidos para las peticiones CORS.
CORS_ALLOWED_HEADERS=Content-Type,Authorization # Los encabezados HTTP permitidos para las peticiones CORS.

# Logging
LOG_LEVEL=info  # debug, info, warn, error # El nivel mínimo de mensajes de log que registra nuestra aplicación, para monitorear su comportamiento.
LOG_FORMAT=json  # json o text # El formato en que se generan nuestros logs.

# WhatsApp
WA_QR_TIMEOUT=60 # El tiempo en segundos que el código QR de WhatsApp permanece válido, para el proceso de vinculación.
WA_RECONNECT_INTERVAL=5 # El intervalo de tiempo en segundos antes de intentar reconectar WhatsApp si la conexión se pierde.
